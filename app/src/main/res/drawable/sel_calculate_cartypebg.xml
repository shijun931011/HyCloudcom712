<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- rectangle:矩形 -->

    <item android:state_pressed="false"><shape android:shape="rectangle">
            <solid android:color="@color/write_color" />
            <!-- 填充的颜色 -->
            <stroke android:width="1px" android:color="@color/orange_corlor" />
            <!-- 描边 -->
            <corners android:radius="16px" />
            <!-- 设置四角的弧度半径为5dp -->
            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding android:bottom="6px" android:left="6px" android:right="6px" android:top="6px" />
        </shape></item>
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <stroke android:width="1px" android:color="@color/orange_corlor" />

            <solid android:color="@color/black" />

            <corners android:radius="16px" />
        </shape></item>

</selector>