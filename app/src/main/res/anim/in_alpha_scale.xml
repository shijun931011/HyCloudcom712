<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 从无到有  渐变切换-->
    <alpha 
        android:duration="600"
        android:fromAlpha="0.5"
        android:toAlpha="1.0"  />
