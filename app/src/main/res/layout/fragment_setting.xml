<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="com.fcgz.sj.timchat.timechat.fcgz.sj.timchat.ui.SettingFragment">

    <timechat.fcgz.sj.time.ui.customview.TemplateTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="@string/home_setting_tab" />
    <View android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <timechat.fcgz.sj.time.ui.customview.CircleImageView
            android:id="@+id/head_me"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/head_me"/>
        <!--<include layout="@layout/activity_photo"></include>-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginLeft="20dp">
            <TextView
                android:id="@id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/idtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray1"
                android:layout_marginTop="3dp"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>


    <timechat.fcgz.sj.time.ui.customview.LineControllerView
        android:id="@+id/nickName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:name="@string/setting_nick_name_change"
        app:canNav="true"/>

    
    <timechat.fcgz.sj.time.ui.customview.LineControllerView
        android:id="@+id/company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:name="@string/setting_company"
        app:content="@string/company"
        app:canNav="true"/>
    <timechat.fcgz.sj.time.ui.customview.LineControllerView
        android:id="@+id/department"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:name="@string/setting_department"
        app:content="@string/department"
        app:canNav="true"/>

    <timechat.fcgz.sj.time.ui.customview.LineControllerView
        android:id="@+id/setting_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:name="@string/setting_phone"
        app:content="@string/phone"
        app:isBottom="true"
        app:canNav="true"/>

    <timechat.fcgz.sj.time.ui.customview.LineControllerView
        android:id="@+id/area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:name="@string/setting_area"
        app:content="@string/area"
        app:isBottom="true"
        app:canNav="true"/>

    <View android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"
        android:layout_marginTop="20dp"/>

    <timechat.fcgz.sj.time.ui.customview.LineControllerView
        android:id="@+id/Modify_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:name="@string/setting_Modify_password"
        app:isBottom="true"
        app:canNav="true"/>

    <TextView
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="18sp"
        android:background="@drawable/bg_negative_btn"
        android:textColor="@color/text_btn"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/setting_logout"/>

</LinearLayout>
