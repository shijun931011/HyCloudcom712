<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:orientation="vertical" >

        <Button
            android:id="@+id/id_cropimage_btn"
            android:layout_width="120px"
            android:layout_height="60px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="36px"
            android:background="@drawable/sel_calculate_cartypebg"
            android:text="确定"
            android:textColor="@color/orange_corlor"
            android:textSize="32px"
            android:visibility="visible" />

        <TextView
            android:id="@+id/id_cropimageback_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="36px"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_cropimgback"
            android:drawablePadding="16px"
            android:text="修剪图片"
            android:textSize="40px" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <view
            android:id="@+id/id_cropimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="timechat.fcgz.sj.time.ui.cameracrop.CropImageView"
            android:background="#55000000" />
    </LinearLayout>

</LinearLayout>