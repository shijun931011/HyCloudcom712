<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="timechat.fcgz.sj.time.ui.ContactFragment">
    <timechat.fcgz.sj.time.ui.customview.TemplateTitle
        android:id="@+id/contact_antionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:moreImg="@drawable/message_croud"
        app:titleText="@string/home_contact_tab"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:background="@color/white"
        android:layout_height="46dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/bg_search_inputbox"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/search"/>
            <EditText
                android:id="@+id/inputSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:textCursorDrawable="@color/black"
                android:hint="@string/search_group_hint"
                android:textColorHint="@color/text_gray1"
                android:textColor="@color/black"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:textSize="14sp"
                android:background="@null" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"/>

    <ExpandableListView
        android:id="@+id/groupList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:cacheColorHint="#00000000"
        android:groupIndicator="@null"
        android:listSelector="#00000000" />
